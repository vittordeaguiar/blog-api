{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=blogapi_dev;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "RateLimitSettings": {
    "Enabled": true,
    "StatusCode": 429,
    "QueueRequests": false,
    "Global": {
      "Enabled": false,
      "PermitLimit": 10000,
      "WindowInSeconds": 60
    },
    "IpLimit": {
      "Enabled": true,
      "PermitLimit": 1000,
      "WindowInSeconds": 60
    },
    "UserLimit": {
      "Enabled": true,
      "PermitLimit": 2000,
      "WindowInSeconds": 60
    }
  },
  "CorsSettings": {
    "PolicyName": "DevelopmentCorsPolicy",
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:4200",
      "http://localhost:5173",
      "http://localhost:8080"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "PATCH",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "Accept",
      "Origin",
      "X-Requested-With"
    ],
    "AllowCredentials": true,
    "MaxAge": 3600
  }
}
